<script src="{{ 'slider-dots.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .section-{{ section.id }}-padding .iwt-slider{
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    margin-top: {{ section.settings.margin_top_mobile }}px;
    margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding .iwt-slider{
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
      margin-top: {{ section.settings.margin_top_desktop }}px;
      margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
    }
  }
{%- endstyle -%}


{%- liquid

  assign blocks_to_display = section.blocks.size
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif

  assign show_desktop_slider = false
  if section.settings.enable_desktop_slider and blocks_to_display > section.settings.columns_desktop
    assign show_desktop_slider = true
  endif
  
  assign actual_blocks_count = blocks_to_display
-%}


<div class="section-{{ section.id }}-padding iwt-section" data-aos="fade-up" data-aos-duration="800">
  <div class="page-width">
    <div class="iwt-slider gradient color-{{ section.settings.section_color_scheme }}">
      <div class="iwt-slider-wrapper">
        <slider-component class="slider-mobile-gutter{% if show_desktop_slider %} slider-component-desktop{% endif %}" data-slides-per-view-mobile="1" data-slides-per-view-desktop="{{ section.settings.columns_desktop }}">
          <ul class="iwt-slider-list contains-content-container grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop {% if show_mobile_slider or show_desktop_slider %} slider{% if show_desktop_slider %} slider--desktop{% endif %}{% if show_mobile_slider %} slider--tablet grid--peek{% endif %}{% endif %}" id="Slider-{{ section.id }}" role="list" data-id="{{ section.id }}">
            {% for block in section.blocks %}
              <li class="iwt-slider-item grid__item{% if show_mobile_slider or show_desktop_slider %} slider__slide{% endif %}" id="Slide-{{ section.id }}-{{ forloop.index }}" {{ block.shopify_attributes }}>
                <div class="iwt-grid image-with-text__grid grid grid--gapless grid--1-col-tablet-down grid--2-col-desktop{% if block.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}">
                  <div class="image-with-text__media-item image-with-text__media-item--{{ block.settings.desktop_image_width }} image-with-text__media-item--{{ block.settings.desktop_content_position }} grid__item">
                    {%- liquid
                      assign ratio_mobile = block.settings.mobile_image.aspect_ratio | default: block.settings.image.aspect_ratio
                      if block.settings.image_behavior == 'ambient' or block.settings.image_behavior == 'zoom-in'
                        assign widths = '198, 432, 642, 900, 1284, 1800'
                        capture sizes
                          echo '(min-width: '
                          echo settings.page_width
                          echo 'px) '
                          echo settings.page_width | minus: 100 | divided_by: 1.6667
                          echo 'px,(min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)'
                        endcapture
                      else
                        assign widths = '165, 360, 535, 750, 1070, 1500'
                        capture sizes
                          echo '(min-width: '
                          echo settings.page_width
                          echo 'px) '
                          echo settings.page_width | minus: 100 | divided_by: 2
                          echo 'px,(min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)'
                        endcapture
                      endif
                      assign image_height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio
                      if block.settings.mobile_image != blank
                        assign image_height_mobile = block.settings.mobile_image.width | divided_by: block.settings.mobile_image.aspect_ratio
                      endif
                    -%}
                    <div class="image-with-text__media image-with-text__media--{{ block.settings.height }} global-media-settings{% if block.settings.image != blank %} media{% else %} image-with-text__media--placeholder placeholder{% endif %}{% if block.settings.image_behavior != 'none' %} animate--{{ block.settings.image_behavior }}{% endif %}" {% if block.settings.height == 'adapt' and block.settings.image != blank %} style="--desktop-ratio-percent: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%; --mobile-ratio-percent: {{ 1 | divided_by: ratio_mobile | times: 100 }}%;"{% endif %}>
                      {%- if block.settings.image != blank -%}
                        {{ block.settings.image | image_url: width: 1500 | image_tag: width: block.settings.image.width, height: image_height, class: 'small-hide', sizes: sizes, widths: widths }}
                        {%- if block.settings.mobile_image != blank -%}
                          {{ block.settings.mobile_image | image_url: width: 750 | image_tag: width: block.settings.mobile_image.width, height: image_height_mobile, class: 'large-up-hide medium-hide', sizes: sizes, widths: widths }}
                        {%- else -%}
                          {{ block.settings.image | image_url: width: 750 | image_tag: width: block.settings.image.width, height: image_height, class: 'large-up-hide medium-hide', sizes: sizes, widths: widths }}
                        {%- endif -%}
                      {%- else -%}
                        {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                      {%- endif -%}
                    </div>
                  </div>
                  <div class="image-with-text__text-item grid__item">
                    <div class="image-with-text__content image-with-text__content--{{ block.settings.desktop_content_position }} image-with-text__content--desktop-{{ block.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ block.settings.mobile_content_alignment }} image-with-text__content--{{ block.settings.height }} content-container gradient color-{{ block.settings.color_scheme }}">
                      {%- if block.settings.heading != blank -%}
                        <h2 class="image-with-text__heading inline-richtext {{ block.settings.heading_size }}">{{ block.settings.heading }}</h2>
                      {%- endif -%}
                      {%- if block.settings.caption != blank -%}
                        <p class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.caption_size }}">{{ block.settings.caption | escape }}</p>
                      {%- endif -%}
                      {%- if block.settings.text != blank -%}
                        <div class="image-with-text__text rte {{ block.settings.text_style }}">{{ block.settings.text }}</div>
                      {%- endif -%}
                      {%- if block.settings.button_label != blank -%}
                        <a {% if block.settings.button_link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}">{{ block.settings.button_label | escape }}</a>
                      {%- endif -%}
                    </div>
                  </div>
                </div>
              </li>
            {% endfor %}
          </ul>
          
          {%- if show_mobile_slider or show_desktop_slider -%}
            <div class="slider-buttons slider-buttons--prime">
              <div class="slider-counter caption hidden">
                <span class="slider-counter--current">1</span>
                <span aria-hidden="true"> / </span>
                <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                <span class="slider-counter--total">{{ blocks_to_display }}</span>
              </div> 
              <slider-dots class="block">
                <div class="slider-dots__container">
                  {% for i in (1..actual_blocks_count) %}
                    <div class="slider-bar {% if forloop.first %} active{% endif %}"> </div>
                  {% endfor %}
                </div>
              </slider-dots>
              <div class="slider-buttons--cs-wrap">
                <button type="button" class="slider-button slider-button--round slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}" aria-controls="Slider-{{ section.id }}">
                  <span class="svg-wrapper"> <svg xmlns="http://www.w3.org/2000/svg" width="15" height="27" viewBox="0 0 15 27" fill="none"><path d="M14.3272 0.512734C15.0105 1.19603 15.0106 2.30384 14.3274 2.98723L5.32209 11.9953C4.61526 12.7023 4.6153 13.8484 5.32218 14.5554L14.3281 23.5627C15.0118 24.2465 15.0115 25.3551 14.3276 26.0385C13.6439 26.7217 12.536 26.7215 11.8525 26.0381L0.645398 14.8309C-0.213711 13.9718 -0.21371 12.5789 0.645399 11.7198L11.8525 0.512733C12.5359 -0.170633 13.6438 -0.170632 14.3272 0.512734Z" fill="currentColor"/></svg></span>
                </button>
                <button type="button" class="slider-button slider-button--round slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}" aria-controls="Slider-{{ section.id }}">
                  <span class="svg-wrapper"><svg width="15" height="27" viewBox="0 0 15 27" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0.512656 0.512734C-0.170636 1.19603 -0.17072 2.30384 0.512468 2.98723L9.51776 11.9953C10.2246 12.7023 10.2245 13.8484 9.51766 14.5554L0.511734 23.5627C-0.17193 24.2465 -0.171693 25.3551 0.512265 26.0385C1.19592 26.7217 2.30389 26.7215 2.9873 26.0381L14.1944 14.8309C15.0536 13.9718 15.0536 12.5789 14.1944 11.7198L2.98734 0.512733C2.30398 -0.170633 1.19602 -0.170632 0.512656 0.512734Z" fill="currentColor"/></svg></span>
                </button>
              </div>
            </div>
          {%- endif -%}
        </slider-component>
      </div>
    </div>
  </div>
</div>

