{{ 'career-openings.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="relative color-{{ section.settings.color_scheme }} isolate gradient">
  {%- if section.settings.float_image != blank -%}
    <div class="career-float-image medium-hide small-hide"> <div class="ratio media media--transparent" style="--ratio-percent: {{ 1 | divided_by: section.settings.float_image.aspect_ratio | times: 100 }}%;">{{ section.settings.float_image | image_url: width: 600 | image_tag: loading: 'lazy', alt: section.settings.float_image.alt }}</div> </div>
  {%- endif -%}
  <div class="career-openings section-{{ section.id }}-padding">
    <div class="page-width">
      {%- if section.settings.caption != blank -%}
        <p class="career-openings__caption uppercase b-500 f-14">{{ section.settings.caption }}</p>
      {%- endif -%}

      {%- if section.settings.title != blank -%}
        <h2 class="career-openings__title b-700 {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <div class="career-openings__description rte f-14 b-400">
          {{ section.settings.description }}
        </div>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="career-openings__list">
          {%- for block in section.blocks -%}
            <div class="career-opening-card" {{ block.shopify_attributes }}>
              <div class="career-opening-card__content">
                <h3 class="career-opening-card__title f-20 b-600">{{ block.settings.job_title }}</h3>
                
                <div class="career-opening-card__meta">
                  {%- if block.settings.experience != blank -%}
                    <div class="career-opening-card__detail">
                      <span class="career-opening-card__label b-600">Experience</span>
                      <span class="career-opening-card__value b-500">{{ block.settings.experience }}</span>
                    </div>
                  {%- endif -%}

                  {%- if block.settings.deadline != blank -%}
                    <div class="career-opening-card__detail">
                      <span class="career-opening-card__label b-600">Deadline</span>
                      <span class="career-opening-card__value b-500">{{ block.settings.deadline }}</span>
                    </div>
                  {%- endif -%}
                </div>
              </div>

              {%- if block.settings.application_link != blank -%}
                <a href="{{ block.settings.application_link }}" class="career-opening-card__button button button--primary b-700" target="_blank" rel="noopener">
                  {{ block.settings.button_label | default: "APPLY NOW" }}
                  <svg xmlns="http://www.w3.org/2000/svg" width="6" height="10" viewBox="0 0 6 10" fill="none"><path d="M1 9L5 5L1 1" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </a>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Career Openings",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "float_image",
      "label": "Float Image",
      "info": "Image floats"
    },
    {
      "type": "inline_richtext",
      "id": "caption",
      "label": "Caption",
      "default": "COME JOIN US",
      "info": "Small text above the heading"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Heading",
      "default": "Career Openings"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        {
          "value": "h2-m",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra Large"
        }
      ],
      "default": "h0"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>We're always looking for creative, talented self-starters to join the JMC family. Check out our open roles below and fill out an application.</p>"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "job_opening",
      "name": "Job Opening",
      "settings": [
        {
          "type": "text",
          "id": "job_title",
          "label": "Job Title",
          "default": "Wordpress Developer"
        },
        {
          "type": "text",
          "id": "experience",
          "label": "Experience Required",
          "default": "2 Years",
          "info": "e.g., 2 Years, 1-3 Years, etc."
        },
        {
          "type": "text",
          "id": "deadline",
          "label": "Application Deadline",
          "default": "2021-05-08",
          "info": "Format: YYYY-MM-DD"
        },
        {
          "type": "url",
          "id": "application_link",
          "label": "Application Link",
          "info": "Link to application form or job posting"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "APPLY NOW"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Career Openings",
      "blocks": [
        {
          "type": "job_opening",
          "settings": {
            "job_title": "Wordpress Developer",
            "experience": "2 Years",
            "deadline": "2021-05-08"
          }
        },
        {
          "type": "job_opening",
          "settings": {
            "job_title": "Javascript Developer",
            "experience": "1 Years",
            "deadline": "2021-05-08"
          }
        },
        {
          "type": "job_opening",
          "settings": {
            "job_title": "Apps Developer",
            "experience": "3 Years",
            "deadline": "2021-05-08"
          }
        }
      ]
    }
  ]
}
{% endschema %}
