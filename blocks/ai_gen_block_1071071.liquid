{% doc %}
  @prompt
    add a simple image section
    have image option
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-simple-image-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
  }

  .ai-simple-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    display: block;
  }

  .ai-simple-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    display: block;
  }
@media (min-width:1600px){
  .ai-simple-image-wrapper-{{ ai_gen_id }} img {
    object-fit:cover;
    height: 699px;
  }
}
  .ai-simple-image-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-simple-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-simple-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }
{% endstyle %}

<div class="ai-simple-image-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.link != blank %}
    <a href="{{ block.settings.link }}">
 {% endif %}
  <div class="ai-simple-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    {% else %}
      <div class="ai-simple-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-simple-image-empty-state-{{ ai_gen_id }}">
          Select an image to display
        </div>
      </div>
    {% endif %}
  </div>
  {% if block.settings.link != blank %}
    </a>
  {% endif %}
</div>

{% schema %}
{
  "name": "Simple image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
    "type":"url",
    "id": "link",
     "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Simple image"
    }
  ]
}
{% endschema %}
